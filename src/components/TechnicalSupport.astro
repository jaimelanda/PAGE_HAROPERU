</section>

<style>
  .technical-support {
    background: linear-gradient(135deg, var(--primary-red), var(--primary-red-dark));
    color: var(--white);
    padding: 2rem 0;
    position: relative;
    overflow: hidden;
  }

  .technical-support::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 30% 50%, rgba(255, 255, 255, 0.1) 0%, transparent 50%);
    pointer-events: none;
  }

  .container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 2rem;
    position: relative;
    z-index: 2;
  }

  .support-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 3rem;
  }

  .support-text h3 {
    font-size: 1.75rem;
    margin-bottom: 0.75rem;
    font-weight: 700;
    letter-spacing: -0.025em;
  }

  .support-text p {
    font-size: 1.125rem;
    opacity: 0.9;
    margin: 0;
    line-height: 1.6;
  }

  .support-contact {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .advisor {
    display: flex;
    align-items: center;
    gap: 1rem;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: var(--border-radius-xl);
    padding: 1rem 1.5rem;
    transition: all var(--transition-normal);
  }

  .advisor:hover {
    background: rgba(255, 255, 255, 0.15);
    transform: translateY(-2px);
  }

  .advisor-avatar {
    width: 3.5rem;
    height: 3.5rem;
    background: var(--white);
    color: var(--primary-red);
    border-radius: var(--border-radius-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    box-shadow: var(--shadow-md);
  }

  .advisor-info h4 {
    font-size: 1.125rem;
    margin-bottom: 0.25rem;
    font-weight: 600;
    line-height: 1.2;
  }

  .advisor-info p {
    font-size: 0.875rem;
    opacity: 0.8;
    margin: 0;
  }

  .contact-buttons {
    display: flex;
    gap: 1rem;
  }

  .whatsapp-btn, .phone-btn {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.875rem 1.5rem;
    border-radius: var(--border-radius-xl);
    font-weight: 600;
    font-size: 0.9rem;
    transition: all var(--transition-normal);
    box-shadow: var(--shadow-md);
    white-space: nowrap;
  }

  .whatsapp-btn {
    background: #25D366;
    color: var(--white);
  }

  .whatsapp-btn:hover {
    background: #128C7E;
    transform: translateY(-3px);
    box-shadow: var(--shadow-lg);
  }

  .phone-btn {
    background: rgba(255, 255, 255, 0.1);
    color: var(--white);
    border: 2px solid rgba(255, 255, 255, 0.3);
    backdrop-filter: blur(10px);
  }

  .phone-btn:hover {
    background: var(--white);
    color: var(--primary-red);
    transform: translateY(-3px);
    box-shadow: var(--shadow-lg);
  }

  @media (max-width: 768px) {
    .technical-support {
      padding: 1.5rem 0;
    }

    .container {
      padding: 0 1rem;
    }

    .support-content {
      flex-direction: column;
      text-align: center;
      gap: 2rem;
    }

    .support-contact {
      flex-direction: column;
      gap: 1.5rem;
      width: 100%;
    }

    .advisor {
      justify-content: center;
    }

    .contact-buttons {
      flex-direction: column;
      width: 100%;
      max-width: 20rem;
      margin: 0 auto;
    }

    .whatsapp-btn, .phone-btn {
      justify-content: center;
    }
  }

  @media (max-width: 480px) {
    .container {
      padding: 0 0.5rem;
    }

    .support-text h3 {
      font-size: 1.5rem;
    }

    .support-text p {
      font-size: 1rem;
    }

    .advisor {
      padding: 0.8rem 1rem;
    }

    .advisor-avatar {
      width: 3rem;
      height: 3rem;
      font-size: 1.3rem;
    }

    .contact-buttons {
      max-width: 18rem;
    }

    .whatsapp-btn, .phone-btn {
      padding: 0.75rem 1.2rem;
      font-size: 0.85rem;
    }
  }
</style>