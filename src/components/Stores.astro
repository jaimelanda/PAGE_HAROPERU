---
import '@fontsource/montserrat/400.css';
import '@fontsource/montserrat/500.css';
import '@fontsource/montserrat/600.css';
import '@fontsource/montserrat/700.css';

const stores = [
  {
    name: "Pje. Azapa 240, La Victoria, Lima",
    address: "Calle Las Prensas 160, Independencia, Lima",
    locationUrl: "https://maps.google.com/?q=Calle+Las+Prensas+160+Independencia+Lima+Peru",
    image: "/images/stores/1.png"
  },
  {
    name: "Ca. Las Prensas 440, Indep., Lima",
    address: "Calle Las Prensas 440, Independencia, Lima",
    locationUrl: "https://maps.google.com/?q=Calle+Las+Prensas+440+Independencia+Lima+Peru",
    image: "/images/stores/2.png"
  },
  {
    name: "Calle 22 de Agosto, Arequipa",
    address: "Calle 22 de Agosto, Arequipa",
    locationUrl: "https://maps.google.com/?q=Calle+22+de+Agosto+Arequipa+Peru",
    image: "/images/stores/3.png"
  }
];
---

<section id="tiendas" class="py-24 bg-white">
  <div class="max-w-7xl mx-auto px-6">

    <!-- Header minimalista -->
    <div class="text-center mb-20">
      <h2 class="text-3xl lg:text-4xl text-gray-900 mb-6 font-light montserrat">Nuestras Tiendas</h2>
      <p class="text-lg text-gray-500 max-w-2xl mx-auto leading-relaxed montserrat">Encuentra la ubicación más cercana a ti</p>
    </div>

    <!-- Tiendas en fila horizontal -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      {stores.map((store, index) => (
        <div class="group relative" key={index}>
          <!-- Título de la tienda -->
          <h3 class="text-xl font-medium text-gray-900 montserrat mb-4 group-hover:text-red-900 transition-colors duration-300">
            {store.name}
          </h3>

          <div class="relative overflow-hidden h-80 transition-all duration-300 hover:shadow-xl">

            <!-- Imagen de fondo que cubre toda la tarjeta -->
            <img
              src={store.image}
              alt={store.name}
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
            />

            <!-- Overlay oscuro sutil -->
            <div class="absolute inset-0 bg-black/20 group-hover:bg-black/30 transition-all duration-300"></div>


            <!-- Botón de acción en la parte inferior -->
            <div class="absolute bottom-6 right-6">
              <a
                href={store.locationUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center justify-center w-12 h-12 bg-white/90 backdrop-blur-sm border border-white/20 rounded-full text-gray-600 hover:border-red-500 hover:text-red-500 hover:bg-white transition-all duration-300 montserrat shadow-lg"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </a>
            </div>

            <!-- Efecto elegante de esquinas -->
            <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-500">
              <!-- Esquina superior izquierda -->
              <div class="absolute top-0 left-0 w-0 h-0 group-hover:w-8 group-hover:h-8 border-t-4 border-l-4 border-amber-400 transition-all duration-700 ease-out"></div>
              <!-- Esquina superior derecha -->
              <div class="absolute top-0 right-0 w-0 h-0 group-hover:w-8 group-hover:h-8 border-t-4 border-r-4 border-amber-400 transition-all duration-700 ease-out delay-75"></div>
              <!-- Esquina inferior izquierda -->
              <div class="absolute bottom-0 left-0 w-0 h-0 group-hover:w-8 group-hover:h-8 border-b-4 border-l-4 border-amber-400 transition-all duration-700 ease-out delay-150"></div>
              <!-- Esquina inferior derecha -->
              <div class="absolute bottom-0 right-0 w-0 h-0 group-hover:w-8 group-hover:h-8 border-b-4 border-r-4 border-amber-400 transition-all duration-700 ease-out delay-200"></div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Información adicional -->
    <div class="mt-20 text-center">
      <div class="inline-flex items-center gap-2 px-6 py-3 bg-gray-50 rounded-full">
        <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
        <span class="text-gray-600 text-sm montserrat">Todas las tiendas están operativas</span>
      </div>
    </div>

  </div>
</section>

<style>
  .montserrat {
    font-family: 'Montserrat', sans-serif !important;
  }

  /* Mobile responsive adjustments */
  @media (max-width: 768px) {
    .grid-cols-1 {
      gap: 1.5rem;
    }

    .text-4xl {
      font-size: 2rem;
    }

    .mb-12 {
      margin-bottom: 2rem;
    }

    .p-6 {
      padding: 1rem;
    }
  }

  @media (max-width: 1024px) and (min-width: 769px) {
    .lg\\:grid-cols-3 {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>

