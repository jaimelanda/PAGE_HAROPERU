---
import '@fontsource/montserrat/400.css';
import '@fontsource/montserrat/500.css';
import '@fontsource/montserrat/600.css';
import '@fontsource/montserrat/700.css';

const stores = [
  {
    name: "Tienda Independencia 1",
    address: "Calle Las Prensas 160, Independencia, Lima",
    locationUrl: "https://maps.google.com/?q=Calle+Las+Prensas+160+Independencia+Lima+Peru"
  },
  {
    name: "Tienda Independencia 2",
    address: "Calle Las Prensas 440, Independencia, Lima",
    locationUrl: "https://maps.google.com/?q=Calle+Las+Prensas+440+Independencia+Lima+Peru"
  },
  {
    name: "Tienda Arequipa",
    address: "Calle 22 de Agosto, Arequipa",
    locationUrl: "https://maps.google.com/?q=Calle+22+de+Agosto+Arequipa+Peru"
  }
];
---

<section id="tiendas" class="py-24 bg-white">
  <div class="max-w-7xl mx-auto px-6">

    <!-- Header minimalista -->
    <div class="text-center mb-20">
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-gray-50 rounded-full mb-8">
        <div class="w-2 h-2 bg-red-500 rounded-full"></div>
        <span class="text-gray-600 font-medium uppercase tracking-wide text-sm montserrat">Ubicaciones</span>
      </div>
      <h2 class="text-5xl text-gray-900 mb-6 font-light montserrat">Nuestras Tiendas</h2>
      <p class="text-lg text-gray-500 max-w-2xl mx-auto leading-relaxed montserrat">Encuentra la ubicación más cercana a ti</p>
    </div>

    <!-- Tiendas en fila horizontal -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      {stores.map((store, index) => (
        <div class="group relative" key={index}>
          <div class="relative p-8 transition-all duration-300 hover:bg-gray-50/50 rounded-2xl">

            <!-- Número de tienda -->
            <div class="flex items-center justify-center w-12 h-12 bg-white border border-gray-200 rounded-full text-gray-400 font-medium montserrat group-hover:border-red-500 group-hover:text-red-500 transition-all duration-300 mb-6">
              {String(index + 1).padStart(2, '0')}
            </div>

            <!-- Información de la tienda -->
            <div class="space-y-4 mb-6">
              <h3 class="text-xl font-light text-gray-900 montserrat group-hover:text-red-900 transition-colors duration-300">
                {store.name}
              </h3>
              <p class="text-gray-500 leading-relaxed montserrat text-sm">
                {store.address}
              </p>
            </div>

            <!-- Placeholder para mapa -->
            <div class="bg-gradient-to-br from-gray-50 to-gray-100 rounded-2xl h-40 flex items-center justify-center border border-gray-200 group-hover:border-red-200 transition-all duration-300 mb-6">
              <div class="text-center">
                <div class="w-8 h-8 bg-gray-300 rounded-full mb-2 mx-auto group-hover:bg-red-300 transition-colors duration-300"></div>
                <span class="text-xs text-gray-400 montserrat">Mapa interactivo</span>
              </div>
            </div>

            <!-- Botón de acción -->
            <div class="text-center">
              <a
                href={store.locationUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center justify-center w-12 h-12 bg-white border border-gray-200 rounded-full text-gray-400 hover:border-red-500 hover:text-red-500 hover:bg-red-50 transition-all duration-300 montserrat"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </a>
            </div>

            <!-- Indicador lateral sutil -->
            <div class="absolute left-0 top-0 bottom-0 w-1 bg-transparent group-hover:bg-gradient-to-b group-hover:from-red-500 group-hover:to-red-600 transition-all duration-500 rounded-r-full"></div>
          </div>
        </div>
      ))}
    </div>

    <!-- Información adicional -->
    <div class="mt-20 text-center">
      <div class="inline-flex items-center gap-2 px-6 py-3 bg-gray-50 rounded-full">
        <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
        <span class="text-gray-600 text-sm montserrat">Todas las tiendas están operativas</span>
      </div>
    </div>

  </div>
</section>

<style>
  .montserrat {
    font-family: 'Montserrat', sans-serif !important;
  }

  /* Mobile responsive adjustments */
  @media (max-width: 768px) {
    .grid-cols-1 {
      gap: 1.5rem;
    }

    .text-4xl {
      font-size: 2rem;
    }

    .mb-12 {
      margin-bottom: 2rem;
    }

    .p-6 {
      padding: 1rem;
    }
  }

  @media (max-width: 1024px) and (min-width: 769px) {
    .lg\\:grid-cols-3 {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>

