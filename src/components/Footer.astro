        </div>
      </div>
    </div>
  </div>
  
</footer>

<!-- Mobile responsive adjustments -->
<style>
  .montserrat {
    font-family: 'Montserrat', sans-serif !important;
  }

  @media (max-width: 1024px) {
    .lg\\:grid-cols-6 {
      grid-template-columns: 1fr;
      gap: 3rem;
      text-align: center;
    }

    .lg\\:col-span-2, .lg\\:col-span-1 {
      grid-column: span 1;
    }

    /* Logo centrado en móvil */
    .lg\\:col-span-2 {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    /* Secciones centradas */
    .lg\\:col-span-1 > div {
      text-align: center;
    }

    /* Enlaces centrados */
    .lg\\:col-span-1 nav {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    /* Información de contacto centrada */
    .lg\\:col-span-1 .space-y-4 > div {
      text-align: center;
    }

    /* Footer bottom responsive */
    .pb-24 {
      padding-bottom: 7.5rem;
    }

    .flex.justify-between {
      flex-direction: column;
      text-align: center;
      gap: 1rem;
    }

    /* Logo más pequeño en móvil */
    .h-40 {
      height: 8rem; /* 128px en móvil */
    }

    /* Padding ajustado para móvil */
    .pt-20 {
      padding-top: 3rem;
    }
  }

  @media (max-width: 768px) {
    /* Logo aún más pequeño en móviles pequeños */
    .h-40 {
      height: 6rem; /* 96px */
    }

    .gap-12 {
      gap: 2rem;
    }

    .pt-20 {
      padding-top: 2rem;
    }
  }

  @media (max-width: 480px) {
    .pb-24 {
      padding-bottom: 11.25rem; /* 180px */
    }
  }
</style>