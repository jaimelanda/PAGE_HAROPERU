---
import direccionHidraulica from '../assets/images/categories/1_cremallerasH.png?url';
import direccionAsistida from '../assets/images/categories/2_cremallerasA.png?url';
import servosHidraulicos from '../assets/images/categories/3_servos.png?url';
import retenes from '../assets/images/categories/4_retenes.png?url';
import accesorios from '../assets/images/categories/5_accesorios.png?url';

// Brand images
import toyotaLogo from '../assets/images/brands/1_toyota.png?url';
import nissanLogo from '../assets/images/brands/2_nissan.png?url';
import hondaLogo from '../assets/images/brands/3_honda.png?url';
import fordLogo from '../assets/images/brands/4_ford.png?url';
import chevroletLogo from '../assets/images/brands/5_chevrolet.png?url';
import hyundaiLogo from '../assets/images/brands/6_hyunadai.png?url';
import kiaLogo from '../assets/images/brands/7_kia.png?url';
import mazdaLogo from '../assets/images/brands/8_mazda.png?url';
import suzukiLogo from '../assets/images/brands/9_suzuki.png?url';
import mitsubishiLogo from '../assets/images/brands/10_mitsubishi.png?url';
import changanLogo from '../assets/images/brands/11_changan.png?url';
import dfksLogo from '../assets/images/brands/12_dfks.png?url';
import geelyLogo from '../assets/images/brands/13_geely.png?url';
import cherryLogo from '../assets/images/brands/14_cherry.png?url';
import greatwallLogo from '../assets/images/brands/15_greatwall.png?url';
---

<section class="products-section" id="productos">
  <div class="container">
    <div class="section-header">
      <span class="section-label">Nuestros Productos</span>
      <h2>Categorías Especializadas</h2>
      <p>Encuentra la solución perfecta para tu vehículo en nuestras categorías especializadas de repuestos automotrices.</p>
    </div>
    
    <div class="categories-grid">
      <div class="category-card hydraulic-steering">
        <div class="category-image">
          <img src={direccionHidraulica} alt="Dirección Hidráulica" />
          <div class="category-overlay"></div>
          <div class="category-content">
            <h3>Dirección Hidráulica</h3>
          </div>
        </div>
      </div>
      
      <div class="category-card power-steering">
        <div class="category-image">
          <img src={direccionAsistida} alt="Dirección Asistida" />
          <div class="category-overlay"></div>
          <div class="category-content">
            <h3>Dirección Asistida</h3>
          </div>
        </div>
      </div>
      
      <div class="category-card hydraulic-servos">
        <div class="category-image">
          <img src={servosHidraulicos} alt="Servos Hidráulicos" />
          <div class="category-overlay"></div>
          <div class="category-content">
            <h3>Servos Hidráulicos</h3>
          </div>
        </div>
      </div>
      
      <div class="category-card accessories">
        <div class="category-image">
          <img src={accesorios} alt="Accesorios" />
          <div class="category-overlay"></div>
          <div class="category-content">
            <h3>Accesorios</h3>
          </div>
        </div>
      </div>
      
      <div class="category-card seals">
        <div class="category-image">
          <img src={retenes} alt="Retenes" />
          <div class="category-overlay"></div>
          <div class="category-content">
            <h3>Retenes</h3>
          </div>
        </div>
      </div>
      
      <div class="category-card belts">
        <div class="category-image">
          <img src={accesorios} alt="Fajas" />
          <div class="category-overlay"></div>
          <div class="category-content">
            <h3>Fajas</h3>
          </div>
        </div>
      </div>
    </div>
    
    <div class="brands-section">
      <h3>Repuestos automotrices para todas las marcas</h3>
      <div class="brands-carousel-container">
        <div class="brands-carousel">
          <div class="brand-logo">
            <img src={toyotaLogo} alt="Toyota" />
          </div>
          <div class="brand-logo">
            <img src={nissanLogo} alt="Nissan" />
          </div>
          <div class="brand-logo">
            <img src={hondaLogo} alt="Honda" />
          </div>
          <div class="brand-logo">
            <img src={fordLogo} alt="Ford" />
          </div>
          <div class="brand-logo">
            <img src={chevroletLogo} alt="Chevrolet" />
          </div>
          <div class="brand-logo">
            <img src={hyundaiLogo} alt="Hyundai" />
          </div>
          <div class="brand-logo">
            <img src={kiaLogo} alt="Kia" />
          </div>
          <div class="brand-logo">
            <img src={mazdaLogo} alt="Mazda" />
          </div>
          <div class="brand-logo">
            <img src={suzukiLogo} alt="Suzuki" />
          </div>
          <div class="brand-logo">
            <img src={mitsubishiLogo} alt="Mitsubishi" />
          </div>
          <div class="brand-logo">
            <img src={changanLogo} alt="Changan" />
          </div>
          <div class="brand-logo">
            <img src={dfksLogo} alt="DFKS" />
          </div>
          <div class="brand-logo">
            <img src={geelyLogo} alt="Geely" />
          </div>
          <div class="brand-logo">
            <img src={cherryLogo} alt="Cherry" />
          </div>
          <div class="brand-logo">
            <img src={greatwallLogo} alt="Great Wall" />
          </div>
          <!-- Duplicate logos for seamless loop -->
          <div class="brand-logo">
            <img src={toyotaLogo} alt="Toyota" />
          </div>
          <div class="brand-logo">
            <img src={nissanLogo} alt="Nissan" />
          </div>
          <div class="brand-logo">
            <img src={hondaLogo} alt="Honda" />
          </div>
          <div class="brand-logo">
            <img src={fordLogo} alt="Ford" />
          </div>
          <div class="brand-logo">
            <img src={chevroletLogo} alt="Chevrolet" />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .products-section {
    padding: 0;
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    position: relative;
    overflow: hidden;
  }

  .products-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 20% 30%, rgba(216, 19, 36, 0.05) 0%, transparent 50%);
    pointer-events: none;
  }

  .container {
    max-width: 100%;
    width: 100%;
    margin: 0;
    padding: 0;
    position: relative;
    z-index: 2;
  }

  .section-header {
    text-align: center;
    margin-bottom: 0;
    padding: 60px 20px 40px 20px;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
  }

  .section-label {
    color: #d81324;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-size: 0.9rem;
  }

  .section-header h2 {
    font-size: 2.5rem;
    color: #333;
    margin: 15px 0;
    font-weight: bold;
  }

  .section-header p {
    font-size: 1.2rem;
    color: #666;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .categories-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 0;
    margin-bottom: 0;
    width: 100%;
  }

  .category-card {
    background: transparent;
    border-radius: 0;
    overflow: hidden;
    transition: all 0.4s ease;
    position: relative;
    height: 280px;
  }

  .category-card:hover {
    transform: scale(1.02);
  }

  .category-image {
    position: relative;
    height: 100%;
    overflow: hidden;
  }

  .category-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .category-card:hover .category-image img {
    transform: scale(1.05);
  }

  .category-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(0, 0, 0, 0.5), rgba(216, 19, 36, 0.4));
    opacity: 0.7;
    transition: opacity 0.4s ease;
  }

  .category-card:hover .category-overlay {
    opacity: 0.5;
  }

  .category-content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 30px 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 3;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.8) 0%, transparent 100%);
  }

  .category-card h3 {
    font-size: 1.6rem;
    margin: 0;
    font-weight: 700;
    line-height: 1.3;
    color: white;
    position: relative;
    transition: all 0.3s ease;
    text-align: center;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
    display: inline-block;
  }

  .category-card h3::after {
    content: '';
    position: absolute;
    width: 0;
    height: 2px;
    bottom: -8px;
    left: 50%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.8), transparent);
    transition: all 0.4s ease;
    transform: translateX(-50%);
  }

  .category-card:hover h3 {
    color: #fff;
    transform: translateY(-5px);
    text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.9);
  }

  .category-card:hover h3::after {
    width: 120%;
  }


  .brands-section {
    text-align: center;
    padding: 60px 20px;
    background: rgba(255, 255, 255, 0.95);
    border-top: 1px solid #eee;
    overflow: hidden;
  }

  .brands-section h3 {
    font-size: 1.8rem;
    color: #333;
    margin-bottom: 50px;
    font-weight: 600;
  }

  .brands-carousel-container {
    width: 100%;
    overflow: hidden;
    position: relative;
  }

  .brands-carousel {
    display: flex;
    width: calc(200px * 15); /* Width for 15 logos (10 + 5 duplicates) */
    animation: scroll-brands 30s linear infinite;
  }

  .brand-logo {
    flex: 0 0 200px;
    height: 100px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 20px;
    transition: transform 0.3s ease;
  }

  .brand-logo:hover {
    transform: scale(1.1);
  }

  .brand-logo img {
    max-width: 180px;
    max-height: 100px;
    object-fit: contain;
    filter: none;
    transition: all 0.3s ease;
  }

  .brand-logo:hover img {
    transform: scale(1.05);
  }

  @keyframes scroll-brands {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-200px * 10)); /* Move by 10 logo widths */
    }
  }

  /* Pause animation on hover */
  .brands-carousel:hover {
    animation-play-state: paused;
  }

  /* Tablet styles */
  @media (max-width: 1024px) and (min-width: 769px) {
    .categories-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .category-card {
      height: 300px;
    }

    .category-card h3 {
      font-size: 1.5rem;
    }
  }

  /* Mobile tablet styles */
  @media (max-width: 768px) and (min-width: 481px) {
    .section-header {
      padding: 40px 15px 20px 15px;
    }

    .section-header h2 {
      font-size: 2rem;
    }

    .categories-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 0;
    }

    .category-card {
      height: 280px;
    }

    .category-content {
      padding: 25px 15px;
    }

    .category-card h3 {
      font-size: 1.4rem;
    }

    .brands-section h3 {
      font-size: 1.6rem;
      margin-bottom: 30px;
    }

    .brand-logo {
      flex: 0 0 180px;
      height: 80px;
      padding: 15px;
    }

    .brand-logo img {
      max-width: 100px;
      max-height: 50px;
    }
  }

  /* Phone styles */
  @media (max-width: 480px) {
    .container {
      padding: 0;
      margin: 0;
      max-width: 100%;
    }

    .section-header {
      padding: 30px 15px 20px 15px;
    }

    .section-header h2 {
      font-size: 1.8rem;
    }

    .section-header p {
      font-size: 1rem;
    }

    .categories-grid {
      grid-template-columns: 1fr;
      gap: 0;
      width: 100vw;
      margin-left: calc(-50vw + 50%);
    }

    .category-card {
      height: 250px;
      margin: 0;
      width: 100%;
    }

    .category-image {
      width: 100%;
    }

    .category-image img {
      width: 100%;
    }

    .category-content {
      padding: 25px 20px;
    }

    .category-card h3 {
      font-size: 1.3rem;
    }

    .brands-section {
      padding: 40px 15px;
    }

    .brands-section h3 {
      font-size: 1.5rem;
      margin-bottom: 25px;
    }

    .brand-logo {
      flex: 0 0 150px;
      height: 70px;
      padding: 10px;
    }

    .brand-logo img {
      max-width: 90px;
      max-height: 40px;
    }

    .brands-carousel {
      width: calc(150px * 15);
      animation: scroll-brands 25s linear infinite;
    }

    @keyframes scroll-brands {
      0% {
        transform: translateX(0);
      }
      100% {
        transform: translateX(calc(-150px * 10));
      }
    }
  }
</style>