---
// Imagen temporal para productos sin imagen
import temporaryImage1 from '../assets/images/categories/1_cremallerasH.png?url';
import temporaryImage2 from '../assets/images/categories/2_servos.png?url';
import temporaryImage3 from '../assets/images/categories/3_retenes.png?url';
import BrandsCarousel from './BrandsCarousel.astro';
import '@fontsource/montserrat/400.css';
import '@fontsource/montserrat/500.css';
import '@fontsource/montserrat/600.css';
import '@fontsource/montserrat/700.css';

// Datos de productos para el diseño futurista
const products = [
  {
    title: "Repuestos de direccion automotriz",
    description: "Contamos con cremalleras hidráulicas, eléctricas y asistidas en las mejores marcas HYD y DKM. Ofrecemos repuestos de alta calidad para todo modelo de vehículo, garantizando un rendimiento confiable y una conducción segura en cualquier camino.",
    image: temporaryImage1,
    features: ["Hidráulica", "Asistida", "Eléctrica"]
  },
  {
    title: "Bombas de dirección hidráulica",
    description: "Bombas de dirección hidráulica (SERVOS HIDRÁULICOS), disponible en las mejor marca HYD . Contamos además con accesorios de alta calidad como ROTORES, garantizando eficiencia y desempeño en cada vehículo.",
    image: temporaryImage2,
    features: ["SERVOS HIDRÁULICOS", "ROTORES"]
  },
  {
    title: "Retenes para Cremalleras",
    description: "Retenes para cremalleras de dirección diseñados con materiales de alta resistencia. Soluciones confiables que aseguran un sellado perfecto y prolongan la vida útil del sistema en todo tipo de vehículos.",
    image: temporaryImage3,
    features: ["RETENES", "NOK"]
  }
];
---

<section class="py-20 bg-black" id="productos">
  <div class="max-w-6xl mx-auto px-5">
    <div class="text-center mb-16">
      <h2 class="text-3xl text-white mt-3 mb-4 font-semibold montserrat">Categorías Especializadas</h2>
      <p class="text-lg text-gray-300 max-w-2xl mx-auto leading-relaxed montserrat font-light">Encuentra la solución perfecta para tu vehículo en nuestras categorías especializadas de repuestos automotrices.</p>
    </div>

    <!-- Diseño Futurista: Párrafo a la izquierda, imagen a la derecha -->
    <div class="space-y-24">
      {products.map((product, index) => (
        <div class={`group relative overflow-hidden ${index % 2 === 1 ? 'lg:flex-row-reverse' : ''}`}>
          <!-- Efectos de fondo futuristas -->
          <div class="absolute inset-0 bg-gradient-to-r from-blue-900/10 to-purple-900/10 opacity-0 group-hover:opacity-100 transition-opacity duration-700"></div>
          <div class="absolute -top-20 -right-20 w-40 h-40 bg-cyan-500/5 rounded-full blur-3xl group-hover:bg-cyan-500/10 transition-colors duration-700"></div>

          <div class="relative z-10 grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">

            <!-- Contenido de texto -->
            <div class={`space-y-6 ${index % 2 === 1 ? 'lg:order-2' : ''}`}>

              <!-- Título -->
              <h3 class="text-3xl lg:text-4xl font-bold text-white leading-tight montserrat">
                <span class="bg-gradient-to-r from-white via-cyan-100 to-blue-200 bg-clip-text text-transparent">
                  {product.title}
                </span>
              </h3>

              <!-- Descripción -->
              <p class="text-lg text-gray-300 leading-relaxed montserrat font-light">
                {product.description}
              </p>

              <!-- Características -->
              <div class="flex flex-wrap gap-3">
                {product.features.map((feature) => (
                  <span class="px-4 py-2 bg-gray-800/50 border border-cyan-500/30 rounded-full text-sm text-cyan-300 montserrat backdrop-blur-sm">
                    {feature}
                  </span>
                ))}
              </div>

              <!-- Elementos flotantes -->
              <div class="absolute -left-4 top-1/2 w-2 h-16 bg-gradient-to-b from-cyan-400/0 via-cyan-400/50 to-cyan-400/0 rounded-full opacity-60"></div>
            </div>

            <!-- Imagen -->
            <div class={`relative group/image ${index % 2 === 1 ? 'lg:order-1' : ''}`}>
              <!-- Contenedor de imagen con efectos -->
              <div class="relative overflow-hidden rounded-2xl aspect-[4/3]">
                <!-- Imagen del producto -->
                <img
                  src={product.image}
                  alt={product.title}
                  class="w-full h-full object-cover transition-transform duration-500 group-hover/image:scale-105"
                />

              </div>


            </div>

          </div>
        </div>
      ))}
    </div>

  </div>
</section>

<!-- Brands Carousel Component -->
<BrandsCarousel />

<script>
  // Intersection Observer for mobile scroll effects
  if (typeof window !== 'undefined') {
    const observerOptions = {
      threshold: 0.5,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('in-view');
        }
      });
    }, observerOptions);

    // Observe all product cards
    document.addEventListener('DOMContentLoaded', () => {
      const cards = document.querySelectorAll('#productos .group');
      cards.forEach((card, index) => {
        // Add staggered delay for each card
        if (window.innerWidth <= 768) {
          card.style.setProperty('--delay', `${index * 0.2}s`);
        }
        observer.observe(card);
      });
    });
  }
</script>

<style>
  .montserrat {
    font-family: 'Montserrat', sans-serif !important;
  }

</style>