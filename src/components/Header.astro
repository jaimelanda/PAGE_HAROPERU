        </ul>

        <div class="mobile-menu-toggle hidden flex-col cursor-pointer p-1 gap-0.5 relative ml-4 order-3">
          <span class="w-6 h-0.5 bg-red-600 transition-all duration-300"></span>
          <span class="w-6 h-0.5 bg-red-600 transition-all duration-300"></span>
          <span class="w-6 h-0.5 bg-red-600 transition-all duration-300"></span>
        </div>
      </div>
    </div>
  </div>
</header>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Mobile menu toggle
    const mobileToggle = document.querySelector('.mobile-menu-toggle');
    const navMenu = document.querySelector('.nav-menu');
    
    if (mobileToggle && navMenu) {
      mobileToggle.addEventListener('click', function() {
        navMenu.classList.toggle('active');
        mobileToggle.classList.toggle('active');
      });
    }

    // Close mobile menu when clicking outside
    document.addEventListener('click', function(e) {
      if (!e.target.closest('.header')) {
        navMenu?.classList.remove('active');
        mobileToggle?.classList.remove('active');
      }
    });

    // Navbar scroll behavior
    const header = document.querySelector('.header');
    const navbar = document.querySelector('.navbar-main');
    const navLinks = document.querySelectorAll('.navbar-link');
    
    window.addEventListener('scroll', function() {
      const currentScroll = window.pageYOffset;
      const scrollThreshold = 50;
      
      // Navbar behavior
      if (currentScroll > scrollThreshold) {
        navbar.classList.add('scrolled');
        header.classList.add('scrolled');
      } else {
        navbar.classList.remove('scrolled');
        header.classList.remove('scrolled');
      }
    });
  });
</script>

<style>
  .dropdown:hover .dropdown-menu {
    opacity: 1 !important;
    visibility: visible !important;
    transform: translateY(0) !important;
  }

  .dropdown:hover .fas {
    transform: rotate(180deg) !important;
  }

  .mobile-menu-toggle.active span:nth-child(1) {
    transform: rotate(45deg) translate(6px, 6px);
  }

  .mobile-menu-toggle.active span:nth-child(2) {
    opacity: 0;
  }

  .mobile-menu-toggle.active span:nth-child(3) {
    transform: rotate(-45deg) translate(6px, -6px);
  }

  /* Navbar scroll effects */
  .navbar-main.scrolled {
    background: white !important;
    box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1) !important;
    border-bottom: 1px solid rgba(0, 0, 0, 0.05) !important;
  }

  .navbar-main.scrolled .navbar-link {
    color: rgb(17 24 39) !important;
  }

  /* No body padding - header overlays content */
  :global(body) {
    padding-top: 0;
  }

  @media (max-width: 768px) {
    .navbar-main {
      background: transparent !important;
    }

    .navbar-main .navbar-link {
      color: white !important;
    }

    .mobile-menu-toggle {
      display: flex !important;
    }

    .flex.items-center.justify-between {
      display: flex !important;
      align-items: center !important;
      justify-content: center !important;
      gap: 15px !important;
      position: relative !important;
    }

    .flex-shrink-0 {
      flex: 1 !important;
      display: flex !important;
      justify-content: center !important;
    }

    .flex-shrink-0 img {
      height: 40px !important;
      max-width: 200px !important;
    }

    .mobile-menu-toggle {
      display: flex !important;
      position: absolute !important;
      right: 0 !important;
      top: 50% !important;
      transform: translateY(-50%) !important;
    }

    /* Mobile navigation - hidden by default */
    .nav-menu {
      display: flex !important;
      position: absolute !important;
      top: 100% !important;
      left: 0 !important;
      right: 0 !important;
      background: white !important;
      flex-direction: column !important;
      gap: 0 !important;
      padding: 20px !important;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1) !important;
      opacity: 0 !important;
      visibility: hidden !important;
      transform: translateY(-20px) !important;
      transition: all 0.3s ease !important;
      justify-content: flex-start !important;
      order: 4 !important;
      width: 100% !important;
      z-index: 1000 !important;
      border-top: 1px solid rgb(229 231 235) !important;
    }

    .nav-menu.active {
      opacity: 1 !important;
      visibility: visible !important;
      transform: translateY(0) !important;
    }

    .nav-menu > li {
      width: 100% !important;
    }

    .nav-menu > li > a {
      padding: 15px 0 !important;
      border-bottom: 1px solid rgb(243 244 246) !important;
      display: block !important;
      width: 100% !important;
      font-size: 16px !important;
      color: rgb(17 24 39) !important;
    }

    .nav-menu > li:last-child > a {
      border-bottom: none !important;
    }

    /* Hide dropdown menus in mobile */
    .dropdown-menu {
      display: none !important;
    }

    /* Remove dropdown arrow in mobile */
    .nav-menu .fas.fa-chevron-down {
      display: none !important;
    }

    /* Make dropdown links look like normal links */
    .nav-menu .dropdown > a {
      pointer-events: auto !important;
    }

    :global(body) {
      padding-top: 0 !important;
    }
  }

  @media (max-width: 480px) {
    .max-w-7xl {
      padding: 0 15px !important;
    }
  }
</style>