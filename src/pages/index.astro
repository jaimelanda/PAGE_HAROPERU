---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import TechnicalSupport from '../components/TechnicalSupport.astro';
import AboutSection from '../components/AboutSection.astro';
import ProductsSection from '../components/ProductsSection.astro';
import Stores from '../components/Stores.astro';
import Footer from '../components/Footer.astro';
---

<Layout>
	<Header />
	<Hero />
	<TechnicalSupport />
	<AboutSection />
	<ProductsSection />
	<Stores />
	<Footer />
	
	<!-- Floating WhatsApp Button -->
	<div class="fixed bottom-8 right-8 z-[1000] md:bottom-6 md:right-6">
		<a href="https://wa.me/51992767584" target="_blank" class="whatsapp-btn flex items-center justify-center w-16 h-16 md:w-12 md:h-12 bg-gradient-to-br from-green-500 to-green-700 rounded-[18px] text-white no-underline relative overflow-hidden backdrop-blur-sm border-2 border-white/20 transition-all duration-300 ease-out animate-whatsapp-pulse hover:-translate-y-2 hover:scale-110 hover:rotate-1 hover:rounded-3xl hover:shadow-lg hover:shadow-green-500/50 hover:bg-gradient-to-br hover:from-green-700 hover:to-green-500 before:content-[''] before:absolute before:-inset-0.5 before:bg-gradient-to-45 before:from-green-500 before:via-green-700 before:to-green-500 before:rounded-[20px] before:-z-10 before:animate-whatsapp-glow before:blur-sm before:opacity-70 after:content-[''] after:absolute after:inset-0 after:bg-gradient-to-br after:from-transparent after:via-white/10 after:to-transparent after:-translate-x-full after:transition-transform after:duration-600 after:ease-out after:rounded-[18px] hover:after:translate-x-full" title="Contactar por WhatsApp">
			<i class="fab fa-whatsapp text-2xl md:text-xl relative z-30 drop-shadow-md animate-whatsapp-rotate"></i>
		</a>
	</div>
</Layout>

<style>
	/* Custom WhatsApp animations */
	@keyframes whatsappPulse {
		0% {
			box-shadow: 0 10px 30px rgba(37, 211, 102, 0.4), 0 0 0 0 rgba(37, 211, 102, 0.7);
		}
		50% {
			box-shadow: 0 15px 35px rgba(37, 211, 102, 0.5), 0 0 0 15px rgba(37, 211, 102, 0.1);
		}
		100% {
			box-shadow: 0 10px 30px rgba(37, 211, 102, 0.4), 0 0 0 0 rgba(37, 211, 102, 0.7);
		}
	}

	@keyframes whatsappGlow {
		0% {
			filter: blur(8px) hue-rotate(0deg);
			opacity: 0.7;
		}
		100% {
			filter: blur(12px) hue-rotate(10deg);
			opacity: 0.9;
		}
	}

	@keyframes whatsappRotate {
		0%, 100% {
			transform: rotate(0deg) scale(1);
		}
		25% {
			transform: rotate(-3deg) scale(1.05);
		}
		50% {
			transform: rotate(0deg) scale(1.1);
		}
		75% {
			transform: rotate(3deg) scale(1.05);
		}
	}

	.animate-whatsapp-pulse {
		animation: whatsappPulse 2s ease-in-out infinite;
	}
	
	.animate-whatsapp-glow {
		animation: whatsappGlow 3s ease-in-out infinite alternate;
	}
	
	.animate-whatsapp-rotate {
		animation: whatsappRotate 4s ease-in-out infinite;
	}
	
	/* Custom gradient direction */
	.bg-gradient-to-45 {
		background: linear-gradient(45deg, var(--tw-gradient-stops));
	}
</style>
